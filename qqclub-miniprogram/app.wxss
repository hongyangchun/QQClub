/* 头像样式 */
.avatar {
  border-radius: 50%;
  overflow: hidden;
}

.avatar-small {
  width: 60rpx;
  height: 60rpx;
}

.avatar-medium {
  width: 80rpx;
  height: 80rpx;
}

.avatar-large {
  width: 120rpx;
  height: 120rpx;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background: var(--divider);
  margin: 16rpx 0;
}

.divider-thick {
  height: 8rpx;
  background: #FAFAFA;
  margin: 16rpx -32rpx;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
  margin-right: 8rpx;
  margin-bottom: 8rpx;
}

.tag-primary {
  background: rgba(124, 179, 66, 0.1);
  color: var(--primary-color);
}

.tag-secondary {
  background: rgba(117, 117, 117, 0.1);
  color: var(--text-secondary);
}

.tag-success {
  background: rgba(76, 175, 80, 0.1);
  color: var(--success);
}

.tag-warning {
  background: rgba(255, 152, 0, 0.1);
  color: var(--warning);
}

.tag-error {
  background: rgba(244, 67, 54, 0.1);
  color: var(--error);
}

/* 列表样式 */
.list-item {
  background: var(--surface);
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid var(--divider);
  transition: background-color 0.3s ease;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item:active {
  background: #F5F5F5;
}

.list-item-content {
  flex: 1;
}

.list-item-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.list-item-subtitle {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 4rpx;
}

.list-item-extra {
  color: var(--text-hint);
  font-size: 24rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  color: var(--text-secondary);
}

.loading-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid var(--divider);
  border-top: 3rpx solid var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  color: var(--text-secondary);
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
}

/* 浮动操作按钮 */
.fab {
  position: fixed;
  bottom: 120rpx;
  right: 32rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: var(--gradient-primary);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  font-weight: bold;
  box-shadow: var(--shadow-xl);
  z-index: 1000;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(10rpx);
}

.fab::before {
  content: '';
  position: absolute;
  inset: -3rpx;
  border-radius: 50%;
  background: var(--gradient-primary);
  z-index: -1;
  opacity: 0.3;
  filter: blur(8rpx);
  animation: fab-pulse 2s infinite;
}

@keyframes fab-pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 0.3;
  }
  50% {
    transform: scale(1.1);
    opacity: 0.1;
  }
}

.fab:active {
  transform: scale(0.9);
  box-shadow: var(--shadow-lg);
}