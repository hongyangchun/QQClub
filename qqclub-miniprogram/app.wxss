/**app.wxss**/
page {
  background-color: #f8f9fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  --primary-color: #7CB342;
  --secondary-color: #8BC34A;
  --accent-color: #689F38;
  --text-primary: #212121;
  --text-secondary: #757575;
  --text-hint: #BDBDBD;
  --divider: #E0E0E0;
  --background: #FAFAFA;
  --surface: #FFFFFF;
  --error: #F44336;
  --warning: #FF9800;
  --success: #4CAF50;
  --info: #2196F3;
}

/* 通用容器 */
.container {
  padding: 20rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

.page-container {
  padding-bottom: 100rpx;
}

/* 卡片样式 */
.card {
  background: var(--surface);
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 20rpx;
  overflow: hidden;
}

.card-header {
  padding: 24rpx 32rpx 16rpx;
  border-bottom: 1rpx solid var(--divider);
}

.card-body {
  padding: 24rpx 32rpx;
}

.card-footer {
  padding: 16rpx 32rpx 24rpx;
  border-top: 1rpx solid var(--divider);
  background: #FAFAFA;
}

/* 按钮样式 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  transition: all 0.3s ease;
  border: none;
  outline: none;
  box-sizing: border-box;
}

.btn-primary {
  background: var(--primary-color);
  color: white;
}

.btn-primary:active {
  background: var(--accent-color);
}

.btn-secondary {
  background: var(--secondary-color);
  color: white;
}

.btn-outline {
  background: transparent;
  border: 2rpx solid var(--primary-color);
  color: var(--primary-color);
}

.btn-outline:active {
  background: var(--primary-color);
  color: white;
}

.btn-block {
  width: 100%;
  display: block;
}

.btn-small {
  padding: 8rpx 16rpx;
  font-size: 24rpx;
}

.btn-large {
  padding: 24rpx 48rpx;
  font-size: 32rpx;
}

/* 文本样式 */
.text-primary {
  color: var(--primary-color);
}

.text-secondary {
  color: var(--text-secondary);
}

.text-hint {
  color: var(--text-hint);
}

.text-center {
  text-align: center;
}

.text-right {
  text-align: right;
}

.text-large {
  font-size: 36rpx;
  font-weight: 600;
}

.text-medium {
  font-size: 32rpx;
  font-weight: 500;
}

.text-small {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.text-mini {
  font-size: 20rpx;
  color: var(--text-hint);
}

/* 布局样式 */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-row {
  flex-direction: row;
}

.items-center {
  align-items: center;
}

.items-start {
  align-items: flex-start;
}

.items-end {
  align-items: flex-end;
}

.justify-center {
  justify-content: center;
}

.justify-between {
  justify-content: space-between;
}

.justify-around {
  justify-content: space-around;
}

.justify-end {
  justify-content: flex-end;
}

.flex-1 {
  flex: 1;
}

.flex-wrap {
  flex-wrap: wrap;
}

