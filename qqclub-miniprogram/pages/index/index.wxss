/* pages/index/index.wxss */

/* Hero Section */
.hero-section {
  margin-bottom: 40rpx;
}

.user-card {
  background: var(--gradient-primary);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-lg);
  border: none;
  overflow: hidden;
  position: relative;
}

.user-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  animation: float 6s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translate(0, 0) rotate(0deg); }
  50% { transform: translate(-20rpx, -20rpx) rotate(180deg); }
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  position: relative;
  z-index: 2;
}

.user-avatar-wrapper {
  position: relative;
  margin-right: 24rpx;
}

.avatar-ring {
  position: absolute;
  inset: -8rpx;
  border: 4rpx solid rgba(255,255,255,0.3);
  border-radius: 50%;
  animation: rotate 10s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.user-info {
  flex: 1;
  color: white;
}

.greeting {
  font-size: 24rpx;
  opacity: 0.8;
  margin-bottom: 8rpx;
}

.username {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.user-status {
  font-size: 24rpx;
  opacity: 0.7;
  line-height: 1.4;
}

.user-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(255,255,255,0.2);
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid rgba(255,255,255,0.3);
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.9);
  background: rgba(255,255,255,0.3);
}

.action-icon {
  font-size: 28rpx;
}

/* Reading Stats */
.reading-stats {
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: rgba(255,255,255,0.15);
  backdrop-filter: blur(20rpx);
  border-radius: var(--radius-lg);
  padding: 24rpx;
  border: 1rpx solid rgba(255,255,255,0.2);
  position: relative;
  z-index: 2;
}

.stat-item {
  text-align: center;
  color: white;
  flex: 1;
}

.stat-number {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  display: block;
}

.stat-label {
  font-size: 20rpx;
  opacity: 0.8;
}

.stat-divider {
  width: 1rpx;
  height: 40rpx;
  background: rgba(255,255,255,0.3);
  margin: 0 16rpx;
}

/* Welcome Card */
.welcome-card {
  background: var(--gradient-card);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-lg);
  text-align: center;
  overflow: hidden;
  position: relative;
}

.welcome-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 200rpx;
  background: var(--gradient-primary);
  opacity: 0.1;
}

.welcome-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  display: block;
}

.welcome-title {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.welcome-subtitle {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.btn-welcome {
  background: var(--gradient-primary);
  padding: 20rpx 48rpx;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
  display: inline-flex;
  align-items: center;
  gap: 16rpx;
  font-weight: 600;
}

.btn-arrow {
  font-size: 32rpx;
  font-weight: bold;
}

/* Quick Actions */
.quick-actions {
  margin-bottom: 40rpx;
}

.action-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.action-card {
  background: var(--gradient-card);
  border-radius: var(--radius-lg);
  padding: 32rpx 24rpx;
  position: relative;
  overflow: hidden;
  border: 1rpx solid rgba(0,0,0,0.05);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  min-height: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.action-card:active {
  transform: scale(0.98) translateY(2rpx);
}

.action-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0.08;
  z-index: 0;
}

.primary-action .action-bg {
  background: var(--gradient-primary);
}

.secondary-action .action-bg {
  background: var(--gradient-success);
}

.accent-action .action-bg {
  background: var(--gradient-secondary);
}

.success-action .action-bg {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.warning-action .action-bg {
  background: linear-gradient(135deg, #f59e0b 0%, #ef4444 100%);
}

.action-content {
  position: relative;
  z-index: 2;
  text-align: center;
}

.message-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: var(--error);
  color: white;
  font-size: 20rpx;
  font-weight: 600;
  padding: 4rpx 8rpx;
  border-radius: 12rpx;
  min-width: 24rpx;
  height: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(239, 68, 68, 0.3);
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
  display: block;
}

.action-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.action-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* Content Section */
.content-section {
  animation: fadeInUp 0.6s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.content-block {
  margin-bottom: 48rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-primary);
}

.title-icon {
  font-size: 32rpx;
}

.section-more {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 28rpx;
  color: var(--primary-color);
  font-weight: 500;
}

.more-arrow {
  font-size: 32rpx;
  font-weight: bold;
}

/* Event Cards */
.event-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.event-card {
  background: var(--gradient-card);
  border-radius: var(--radius-lg);
  padding: 24rpx;
  border: 1rpx solid rgba(0,0,0,0.05);
  box-shadow: var(--shadow-sm);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.event-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: var(--gradient-primary);
  transform: scaleY(0);
  transition: transform 0.3s ease;
}

.event-card:active {
  transform: translateX(4rpx);
  box-shadow: var(--shadow-md);
}

.event-card:active::before {
  transform: scaleY(1);
}

.event-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.event-status {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
}

.status-dot.approved {
  background: var(--success);
  box-shadow: 0 0 8rpx rgba(16, 185, 129, 0.4);
}

.status-dot.rejected {
  background: var(--error);
  box-shadow: 0 0 8rpx rgba(239, 68, 68, 0.4);
}

.status-dot.pending {
  background: var(--warning);
  box-shadow: 0 0 8rpx rgba(245, 158, 11, 0.4);
}

.status-text {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.event-badge {
  background: rgba(79, 70, 229, 0.1);
  color: var(--primary-color);
  padding: 6rpx 16rpx;
  border-radius: var(--radius-sm);
  font-size: 20rpx;
  font-weight: 600;
}

.event-body {
  margin-left: 24rpx;
}

.event-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.event-book {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
}

.event-meta {
  display: flex;
  gap: 32rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.meta-icon {
  font-size: 24rpx;
}

.meta-text {
  font-size: 24rpx;
  color: var(--text-hint);
}

/* Post Cards */
.post-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.post-card {
  background: var(--gradient-card);
  border-radius: var(--radius-lg);
  padding: 24rpx;
  border: 1rpx solid rgba(0,0,0,0.05);
  box-shadow: var(--shadow-sm);
  transition: all 0.3s ease;
}

.post-card:active {
  transform: translateY(-2rpx);
  box-shadow: var(--shadow-md);
}

.post-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.author-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.author-details {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.author-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.post-time {
  font-size: 20rpx;
  color: var(--text-hint);
}

.post-menu {
  font-size: 32rpx;
  color: var(--text-hint);
  padding: 8rpx;
}

.post-body {
  margin-bottom: 16rpx;
}

.post-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.post-content {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.post-footer {
  border-top: 1rpx solid var(--divider);
  padding-top: 16rpx;
}

.post-stats {
  display: flex;
  gap: 32rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.stat-icon {
  font-size: 24rpx;
}

.stat-text {
  font-size: 24rpx;
  color: var(--text-hint);
}

/* Empty State */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-illustration {
  margin-bottom: 32rpx;
}

.empty-emoji {
  font-size: 120rpx;
  display: block;
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
  40% { transform: translateY(-20rpx); }
  60% { transform: translateY(-10rpx); }
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.5;
  margin-bottom: 40rpx;
}

.empty-actions {
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

/* Loading State */
.loading-overlay {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx;
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-top: 24rpx;
}

/* Create Options Modal */
.create-options-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
  z-index: 1000;
}

.create-options-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  background: white;
  border-radius: var(--radius-xl);
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  transform: translateY(50rpx);
  transition: transform 0.3s ease;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

.create-options-modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid var(--divider);
  background: var(--gradient-card);
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: var(--surface-hover);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.modal-close:active {
  background: var(--error);
  color: white;
}

.close-icon {
  font-size: 28rpx;
  font-weight: bold;
}

.modal-options {
  padding: 16rpx;
}

.option-card {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx;
  border-radius: var(--radius-lg);
  background: var(--gradient-card);
  border: 1rpx solid rgba(0,0,0,0.05);
  transition: all 0.3s ease;
  margin-bottom: 16rpx;
}

.option-card:active {
  transform: translateX(4rpx);
  box-shadow: var(--shadow-md);
}

.option-card:last-child {
  margin-bottom: 0;
}

.option-icon {
  font-size: 40rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--surface-hover);
  border-radius: var(--radius-md);
  flex-shrink: 0;
}

.option-content {
  flex: 1;
}

.option-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.option-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 1.4;
}

.option-arrow {
  font-size: 32rpx;
  color: var(--text-hint);
  font-weight: bold;
}

/* Responsive Design */
@media (max-width: 750rpx) {
  .action-grid {
    grid-template-columns: 1fr;
    gap: 16rpx;
  }

  .action-card {
    min-height: 120rpx;
    padding: 24rpx 20rpx;
  }

  .event-meta {
    flex-direction: column;
    gap: 12rpx;
  }

  .post-stats {
    gap: 20rpx;
  }

  .empty-actions {
    flex-direction: column;
    align-items: center;
  }

  .modal-content {
    width: 95%;
    margin: 20rpx;
  }

  .modal-header {
    padding: 24rpx;
  }

  .modal-options {
    padding: 12rpx;
  }

  .option-card {
    padding: 20rpx;
    gap: 16rpx;
  }

  .option-icon {
    width: 64rpx;
    height: 64rpx;
    font-size: 32rpx;
  }
}