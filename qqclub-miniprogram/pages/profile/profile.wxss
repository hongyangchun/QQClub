/* pages/profile/profile.wxss */

/* 用户信息卡片 */
.user-profile-card {
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  color: white;
  margin-bottom: 32rpx;
  overflow: hidden;
}

.user-profile-card .card-body {
  padding: 40rpx 32rpx;
}

.profile-header {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
}

.profile-info {
  flex: 1;
}

.nickname {
  font-weight: 700;
  margin-bottom: 8rpx;
  color: white;
}

.phone {
  margin-bottom: 4rpx;
  color: rgba(255, 255, 255, 0.9);
}

.join-date {
  color: rgba(255, 255, 255, 0.7);
}

.profile-actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.user-profile-card .btn-outline {
  border-color: rgba(255, 255, 255, 0.8);
  color: white;
  background: rgba(255, 255, 255, 0.1);
}

.user-profile-card .btn-outline:active {
  background: rgba(255, 255, 255, 0.2);
}

/* 统计数据网格 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 2rpx;
  background: var(--divider);
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.stat-item {
  background: var(--surface);
  padding: 32rpx 16rpx;
  text-align: center;
  transition: background-color 0.3s ease;
}

.stat-item:active {
  background: #f5f5f5;
}

.stat-number {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--primary-color);
  margin-bottom: 8rpx;
  line-height: 1;
}

.stat-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 1.3;
}

/* 功能菜单 */
.menu-section {
  margin-bottom: 32rpx;
}

.menu-group {
  background: var(--surface);
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid var(--divider);
  transition: background-color 0.3s ease;
  position: relative;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #f8f9fa;
}

.menu-item.logout-item:active {
  background: rgba(244, 67, 54, 0.05);
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
  width: 40rpx;
  text-align: center;
}

.menu-content {
  flex: 1;
}

.menu-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 4rpx;
  line-height: 1.3;
}

.menu-title.text-error {
  color: var(--error);
}

.menu-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 1.3;
}

.menu-arrow {
  font-size: 32rpx;
  color: var(--text-hint);
  margin-left: 16rpx;
}

/* 登录提示 */
.login-prompt {
  padding: 80rpx 32rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 40rpx;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 32rpx 0;
}

/* 响应式优化 */
@media (max-width: 750rpx) {
  .stats-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 16rpx;
  }

  .stat-item {
    padding: 24rpx 16rpx;
  }

  .stat-number {
    font-size: 36rpx;
  }

  .stat-label {
    font-size: 22rpx;
  }

  .menu-item {
    padding: 28rpx 24rpx;
  }

  .menu-icon {
    font-size: 36rpx;
    margin-right: 20rpx;
  }

  .menu-title {
    font-size: 30rpx;
  }

  .menu-desc {
    font-size: 22rpx;
  }

  .profile-header {
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 20rpx;
  }

  .profile-actions {
    flex-direction: row;
    width: 100%;
    justify-content: center;
  }
}

/* 动画效果 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.user-profile-card {
  animation: fadeInUp 0.6s ease-out;
}

.stats-grid {
  animation: fadeInUp 0.6s ease-out 0.1s both;
}

.menu-group:nth-child(1) {
  animation: fadeInUp 0.6s ease-out 0.2s both;
}

.menu-group:nth-child(2) {
  animation: fadeInUp 0.6s ease-out 0.3s both;
}

.menu-group:nth-child(3) {
  animation: fadeInUp 0.6s ease-out 0.4s both;
}

.stat-item {
  transition: all 0.3s ease;
}

.stat-item:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(124, 179, 66, 0.15);
}

.menu-item {
  position: relative;
  overflow: hidden;
}

.menu-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(124, 179, 66, 0.1), transparent);
  transition: left 0.5s ease;
}

.menu-item:active::before {
  left: 100%;
}