/* pages/event/checkin.wxss */

/* 页面容器 */
.checkin-page {
  background: #f8f9fa;
  min-height: 100vh;
  padding-bottom: 140rpx;
}

/* 头部导航 */
.header-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-left, .nav-right {
  width: 80rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
}

.nav-left {
  justify-content: flex-start;
}

.nav-right {
  justify-content: flex-end;
}

.nav-icon {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.nav-action {
  font-size: 28rpx;
  color: #4CAF50;
  font-weight: 500;
}

/* 活动信息卡片 */
.event-info-card {
  margin: 20rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
}

.event-info-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.event-basic {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.event-book-cover {
  width: 80rpx;
  height: 106rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.event-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.event-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.event-subtitle {
  font-size: 26rpx;
  color: #666;
}

.progress-bar {
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4CAF50, #45a049);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  text-align: right;
}

/* 今日任务区域 */
.today-task-section {
  margin: 20rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.task-actions {
  display: flex;
  gap: 20rpx;
}

.task-action-btn {
  font-size: 26rpx;
  color: #4CAF50;
  padding: 8rpx 16rpx;
  border: 1rpx solid #4CAF50;
  border-radius: 12rpx;
  background: rgba(76, 175, 80, 0.1);
}

.task-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.task-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.task-content-text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
}

.thinking-questions {
  display: flex;
  flex-direction: column;
}

.question-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.question-item {
  font-size: 28rpx;
  color: #555;
  line-height: 1.5;
  padding-left: 20rpx;
}

.no-task {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  gap: 16rpx;
}

.no-task-icon {
  font-size: 80rpx;
}

.no-task-text {
  font-size: 30rpx;
  color: #666;
}

.no-task-desc {
  font-size: 26rpx;
  color: #999;
}

/* 加载骨架屏 */
.loading-skeleton {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.skeleton-line {
  background: #f0f0f0;
  border-radius: 8rpx;
  animation: pulse 1.5s ease-in-out infinite;
}

.skeleton-line.long {
  height: 32rpx;
  width: 80%;
}

.skeleton-line.medium {
  height: 28rpx;
  width: 60%;
}

.skeleton-line.short {
  height: 24rpx;
  width: 40%;
}

@keyframes pulse {
  0%, 100% { opacity: 0.8; }
  50% { opacity: 0.3; }
}

/* 打卡编辑区域 */
.checkin-edit-section {
  margin: 20rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
}

.word-count {
  font-size: 26rpx;
  color: #999;
  font-weight: 500;
}

.word-count.warning {
  color: #ff6b6b;
}

.content-editor {
  margin-bottom: 30rpx;
}

.checkin-textarea {
  width: 100%;
  min-height: 300rpx;
  padding: 20rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 16rpx;
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
  background: #fafafa;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.checkin-textarea:focus {
  border-color: #4CAF50;
  background: #fff;
}

/* 图片上传区域 */
.image-upload-section {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 30rpx;
}

.image-count {
  font-size: 26rpx;
  color: #999;
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-top: 20rpx;
}

.image-item {
  position: relative;
  width: 100%;
  padding-bottom: 100%;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.image-preview {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.image-delete {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background: #ff6b6b;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.4);
}

.delete-icon {
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
}

.image-add {
  width: 100%;
  padding-bottom: 100%;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fafafa;
  position: relative;
  transition: all 0.3s ease;
}

.image-add:active {
  background: #f0f0f0;
  border-color: #4CAF50;
}

.add-icon, .add-text {
  position: absolute;
  color: #999;
}

.add-icon {
  font-size: 48rpx;
  top: 35%;
}

.add-text {
  font-size: 24rpx;
  bottom: 25%;
}

.image-placeholder {
  width: 100%;
  padding-bottom: 100%;
}

/* 底部操作区 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx 40rpx;
  background: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.1);
  display: flex;
  gap: 20rpx;
  z-index: 100;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.action-btn.secondary {
  background: #f5f5f5;
  color: #666;
}

.action-btn.secondary:active {
  background: #e8e8e8;
}

.action-btn.primary {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.3);
}

.action-btn.primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.3);
}

.action-btn.primary.loading {
  background: #ccc;
  color: #999;
  box-shadow: none;
}

.action-btn:disabled {
  background: #e0e0e0;
  color: #999;
  box-shadow: none;
}

/* 加载遮罩 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255,255,255,0.3);
  border-top: 4rpx solid #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: #fff;
  font-size: 28rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .image-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

/* 暗黑模式支持 */
@media (prefers-color-scheme: dark) {
  .checkin-page {
    background: #1a1a1a;
  }

  .event-info-card,
  .today-task-section,
  .checkin-edit-section,
  .header-nav {
    background: #2d2d2d;
    box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.3);
  }

  .event-title,
  .section-title,
  .nav-title {
    color: #fff;
  }

  .event-subtitle,
  .progress-text,
  .task-content-text,
  .question-item {
    color: #ccc;
  }

  .checkin-textarea {
    background: #333;
    border-color: #444;
    color: #fff;
  }

  .bottom-actions {
    background: #2d2d2d;
  }
}