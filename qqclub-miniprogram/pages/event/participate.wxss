.add-comment-text {
  font-size: 24rpx;
  color: #999;
}

/* 评论输入框 */
.comment-input-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 2000;
}

.comment-input-wrapper {
  width: 100%;
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  padding: 24rpx;
}

.comment-textarea {
  width: 100%;
  min-height: 120rpx;
  max-height: 300rpx;
  padding: 16rpx;
  border: 1rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 26rpx;
  line-height: 1.5;
  resize: none;
}

.comment-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  margin-top: 16rpx;
}

.cancel-btn,
.submit-btn {
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  border: none;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.submit-btn {
  background: #52c41a;
  color: white;
}

/* 空状态 */
.empty-checkins {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-emoji {
  font-size: 120rpx;
  display: block;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.empty-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 32rpx;
  display: block;
}

/* 我的统计卡片 */
.my-stats-card {
  background: linear-gradient(135deg, #f6ffed 0%, #f0f9ff 100%);
  border: 1rpx solid #b7eb8f;
}

/* 现代化统计网格 */
.stats-grid-modern {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.stat-item-modern {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #f8fafc 0%, #ffffff 100%);
  padding: 28rpx 24rpx;
  border-radius: 20rpx;
  border: 1rpx solid #f1f5f9;
  transition: all 0.3s ease;
}

.stat-icon-wrapper {
  width: 56rpx;
  height: 56rpx;
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.stat-icon {
  font-size: 28rpx;
  filter: brightness(0) invert(1);
}

.stat-content {
  flex: 1;
}

.stat-number {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 4rpx;
  line-height: 1;
}

.stat-label {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 500;
}

/* 现代化活动进度 */
.activity-progress-modern {
  padding-top: 32rpx;
  border-top: 1rpx solid #f5f5f5;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.progress-label {
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 600;
}

.progress-info-compact {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.progress-percentage {
  font-size: 28rpx;
  color: #52c41a;
  font-weight: 700;
}

.progress-bar-modern {
  height: 8rpx;
  background-color: #f1f5f9;
  border-radius: 4rpx;
  overflow: hidden;
  position: relative;
}

.progress-fill-modern {
  height: 100%;
  background: linear-gradient(90deg, #52c41a 0%, #73d13d 100%);
  border-radius: 4rpx;
  transition: width 0.6s ease;
  position: relative;
}

.progress-fill-modern::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent 0%, rgba(255,255,255,0.4) 50%, transparent 100%);
  animation: shimmer 2s infinite;
}

@keyframes shimmer {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

/* 折叠的活动信息 */
.event-info-collapsible {
  background: #f8f9fa;
}

.collapsible-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  cursor: pointer;
}

.collapsible-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
}

.collapsible-icon {
  font-size: 20rpx;
  color: #666;
  transition: transform 0.3s ease;
}

.collapsible-content {
  padding: 0 0 20rpx 0;
  text-align: center;
}

.collapsible-content .event-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 12rpx;
  text-align: center;
}

.collapsible-content .event-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.collapsible-content .event-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  align-items: center;
}

.collapsible-content .meta-item {
  font-size: 22rpx;
  color: #666;
}