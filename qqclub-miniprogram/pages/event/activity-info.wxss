/* pages/event/activity-info.wxss */

/* Hero Section */
.event-hero {
  position: relative;
  background: var(--gradient-primary);
  margin: -32rpx -32rpx 32rpx -32rpx;
  overflow: hidden;
}

.hero-background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, var(--primary-color) 0%, #6366f1 100%);
  opacity: 0.9;
}

.hero-content {
  position: relative;
  z-index: 2;
  padding: 48rpx 32rpx 32rpx;
  color: white;
}

.event-status-bar {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.status-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.status-dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
}

.status-dot.approved {
  background: #10b981;
  box-shadow: 0 0 8rpx rgba(16, 185, 129, 0.4);
}

.status-dot.pending {
  background: #f59e0b;
  box-shadow: 0 0 8rpx rgba(245, 158, 11, 0.4);
}

.status-dot.rejected {
  background: #ef4444;
  box-shadow: 0 0 8rpx rgba(239, 68, 68, 0.4);
}

.status-icon {
  font-size: 20rpx;
}

.status-text {
  font-size: 20rpx;
  font-weight: 500;
}

.event-title-section {
  margin-bottom: 32rpx;
}

.event-title {
  font-size: 44rpx;
  font-weight: 700;
  line-height: 1.3;
  margin-bottom: 16rpx;
}

.event-book {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 28rpx;
  opacity: 0.9;
}

.book-icon {
  font-size: 32rpx;
}

.event-time-info {
  display: flex;
  gap: 32rpx;
}

.time-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.time-icon {
  font-size: 28rpx;
}

.time-content {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.time-label {
  font-size: 20rpx;
  opacity: 0.7;
}

.time-value {
  font-size: 24rpx;
  font-weight: 600;
}

/* Info Section */
.info-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.info-card {
  background: var(--gradient-card);
  border-radius: var(--radius-xl);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  box-shadow: var(--shadow-sm);
  overflow: hidden;
  transition: all 0.3s ease;
}

.info-card.prominent {
  box-shadow: var(--shadow-md);
  border: 1rpx solid rgba(79, 70, 229, 0.1);
}

.card-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 24rpx 24rpx 16rpx;
  border-bottom: 1rpx solid var(--divider);
}

.card-icon {
  font-size: 32rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.card-content {
  padding: 24rpx;
}

/* Info Grid */
.info-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.info-item {
  text-align: center;
  padding: 16rpx;
  background: rgba(79, 70, 229, 0.05);
  border-radius: var(--radius-lg);
  border: 1rpx solid rgba(79, 70, 229, 0.1);
}

.info-label {
  display: block;
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
}

.info-value {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: var(--primary-color);
}

/* Description Text */
.description-text,
.rules-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: var(--text-secondary);
  white-space: pre-wrap;
}

/* Settings List */
.settings-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid var(--divider);
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 28rpx;
  color: var(--text-primary);
}

.setting-value {
  font-size: 28rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

/* Organizer Info */
.organizer-info {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
}

.organizer-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: var(--surface-hover);
}

.organizer-details {
  flex: 1;
}

.organizer-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.organizer-bio {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
}

.organizer-stats {
  margin-top: 8rpx;
}

.stat-text {
  font-size: 24rpx;
  color: var(--text-hint);
}

.contact-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: var(--primary-color);
  color: white;
  border-radius: var(--radius-lg);
  font-size: 24rpx;
  font-weight: 500;
  border: none;
}

.contact-btn::after {
  display: none;
}

.btn-icon {
  font-size: 24rpx;
}

.btn-text {
  font-size: 24rpx;
}

/* Timeline */
.timeline {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.timeline-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.timeline-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: var(--divider);
  margin-top: 8rpx;
  position: relative;
  transition: all 0.3s ease;
}

.timeline-dot.active {
  background: var(--primary-color);
  box-shadow: 0 0 12rpx rgba(79, 70, 229, 0.4);
}

.timeline-dot.active::before {
  content: '';
  position: absolute;
  inset: -8rpx;
  border: 2rpx solid rgba(79, 70, 229, 0.2);
  border-radius: 50%;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); opacity: 1; }
  50% { transform: scale(1.1); opacity: 0.7; }
}

.timeline-content {
  flex: 1;
}

.timeline-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 4rpx;
}

.timeline-time {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* Bottom Actions */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 24rpx 32rpx;
  border-top: 1rpx solid var(--divider);
  display: flex;
  gap: 16rpx;
  z-index: 100;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 20rpx;
  border-radius: var(--radius-lg);
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.action-btn::after {
  display: none;
}

.action-btn.primary {
  background: var(--gradient-primary);
  color: white;
  box-shadow: var(--shadow-md);
}

.action-btn.primary:active {
  transform: translateY(2rpx);
  box-shadow: var(--shadow-sm);
}

.action-btn.outline {
  background: white;
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
}

.action-btn.outline:active {
  background: rgba(79, 70, 229, 0.05);
}

/* Loading State */
.loading-overlay {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--divider);
  border-top: 4rpx solid var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* Empty State */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
}

.empty-emoji {
  font-size: 120rpx;
  display: block;
  margin-bottom: 24rpx;
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
  40% { transform: translateY(-20rpx); }
  60% { transform: translateY(-10rpx); }
}

.empty-text {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.5;
  margin-bottom: 40rpx;
}

.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 40rpx;
  border-radius: var(--radius-lg);
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.btn-primary {
  background: var(--gradient-primary);
  color: white;
  box-shadow: var(--shadow-md);
}

.btn::after {
  display: none;
}

/* Page Container */
.page-container {
  padding-bottom: 120rpx; /* 为底部操作栏留出空间 */
  min-height: 100vh;
  box-sizing: border-box;
}

/* Responsive Design */
@media (max-width: 750rpx) {
  .info-grid {
    grid-template-columns: 1fr;
    gap: 16rpx;
  }

  .event-time-info {
    flex-direction: column;
    gap: 16rpx;
  }

  .bottom-actions {
    padding: 20rpx 24rpx;
    gap: 12rpx;
  }

  .action-btn {
    padding: 16rpx;
    font-size: 26rpx;
  }
}