/* pages/event/detail.wxss */

/* === 重新设计的现代化Banner样式 === */

/* Event Hero Section - Modern Design */
.event-hero-modern {
  position: relative;
  margin: -20rpx -20rpx 32rpx -20rpx;
  overflow: hidden;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 0 0 40rpx 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(102, 126, 234, 0.3);
}

.hero-background-modern {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg,
    rgba(102, 126, 234, 0.9) 0%,
    rgba(118, 75, 162, 0.9) 50%,
    rgba(64, 81, 137, 0.9) 100%);
  z-index: 1;
}


.hero-content-modern {
  position: relative;
  z-index: 2;
  padding: 60rpx 24rpx 40rpx;
  color: white;
}

/* 顶部导航栏 */
.top-nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 0 8rpx;
}

.nav-left {
  flex: 1;
}

.nav-right {
  display: flex;
  gap: 16rpx;
}

.status-modern {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 24rpx;
  padding: 12rpx 20rpx;
  display: inline-block;
}

.status-text {
  font-size: 24rpx;
  font-weight: 600;
  color: white;
}

.nav-item-modern {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.25);
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.nav-item-modern:active {
  background: rgba(255, 255, 255, 0.25);
  transform: scale(0.95);
}

.nav-text-modern {
  font-size: 24rpx;
  font-weight: 500;
  color: white;
}

/* 主要内容区域 */
.hero-main {
  margin-bottom: 40rpx;
}

.event-banner-layout {
  display: flex;
  align-items: center;
  gap: 24rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(15rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  animation: slideUp 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
}

/* 左侧：书籍封面 */
.book-cover-section {
  position: relative;
  flex-shrink: 0;
}

.book-cover-main {
  width: 120rpx;
  height: 160rpx;
  border-radius: 12rpx;
  object-fit: cover;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.4);
  transition: transform 0.3s ease;
}

.book-cover-main:active {
  transform: scale(0.95);
}

.book-cover-shine {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 12rpx;
  background: linear-gradient(135deg, rgba(255,255,255,0.2) 0%, rgba(255,255,255,0.05) 100%);
  pointer-events: none;
}

/* 中间：活动信息 */
.event-info-section {
  flex: 1;
  min-width: 0;
}

.event-title-main {
  font-size: 32rpx;
  font-weight: 700;
  line-height: 1.4;
  margin-bottom: 8rpx;
  color: white;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.2);
  letter-spacing: 1rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.event-book-name {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.event-meta-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-wrap: wrap;
}

.meta-badge {
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 16rpx;
  padding: 6rpx 12rpx;
  font-size: 20rpx;
  font-weight: 600;
  color: white;
  white-space: nowrap;
}

.meta-badge.status-enrolling {
  background: rgba(34, 197, 94, 0.8);
  border-color: rgba(34, 197, 94, 0.9);
}

.meta-badge.status-in_progress {
  background: rgba(251, 191, 36, 0.8);
  border-color: rgba(251, 191, 36, 0.9);
}

.meta-badge.status-completed {
  background: rgba(156, 163, 175, 0.8);
  border-color: rgba(156, 163, 175, 0.9);
}

.meta-text {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
  white-space: nowrap;
}

.meta-divider {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.5);
  font-weight: 300;
}

/* 右侧：导航按钮 */
.nav-buttons-section {
  display: flex;
  gap: 12rpx;
  flex-shrink: 0;
  align-items: center;
}

.nav-button-modern {
  width: 56rpx;
  height: 56rpx;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.25);
  border-radius: 50%;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-button-modern:active {
  background: rgba(255, 255, 255, 0.25);
  transform: scale(0.9);
}

.nav-icon {
  font-size: 28rpx;
  line-height: 1;
}

.event-meta-info {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
  gap: 8rpx;
}

.meta-item {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 400;
  white-space: nowrap;
}

.meta-item.status-enrolling {
  color: rgba(34, 197, 94, 0.9);
}

.meta-item.status-in_progress {
  color: rgba(251, 191, 36, 0.9);
}

.meta-item.status-completed {
  color: rgba(156, 163, 175, 0.9);
}

.meta-divider {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.5);
  font-weight: 300;
}

@keyframes slideUp {
  0% {
    opacity: 0;
    transform: translateY(30rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.event-title-modern {
  font-size: 36rpx;
  font-weight: 700;
  line-height: 1.4;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.2);
  letter-spacing: 1rpx;
}

.event-subtitle {
  font-size: 28rpx;
  opacity: 0.95;
  font-weight: 400;
  letter-spacing: 0.5rpx;
}

/* 底部装饰 */
.hero-decoration {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 80rpx;
  overflow: hidden;
}

.decoration-wave {
  position: absolute;
  bottom: -2rpx;
  left: -50%;
  width: 200%;
  height: 80rpx;
  background: white;
  border-radius: 50% 50% 0 0;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .hero-content-modern {
    padding: 40rpx 20rpx 30rpx;
  }

  .event-title-modern {
    font-size: 32rpx;
  }

  .event-subtitle {
    font-size: 24rpx;
  }

  .nav-right {
    gap: 12rpx;
  }

  .nav-item-modern {
    padding: 8rpx 16rpx;
  }

  .nav-text-modern {
    font-size: 22rpx;
  }

  .event-banner-layout {
    flex-direction: column;
    padding: 24rpx;
    gap: 20rpx;
    text-align: center;
  }

  .book-cover-main {
    width: 100rpx;
    height: 140rpx;
    align-self: center;
  }

  .nav-buttons-section {
    justify-content: center;
    gap: 16rpx;
  }

  .nav-button-modern {
    width: 64rpx;
    height: 64rpx;
  }

  .event-title-main {
    font-size: 28rpx;
    text-align: center;
  }

  .event-book-name {
    text-align: center;
  }

  .event-meta-row {
    justify-content: center;
  }
}

.event-time-info {
  display: flex;
  gap: 24rpx;
}

.time-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.time-icon {
  font-size: 24rpx;
}

.time-content {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.time-label {
  font-size: 20rpx;
  opacity: 0.8;
}

.time-value {
  font-size: 24rpx;
  font-weight: 600;
}

/* Action Section */
.action-section {
  margin-bottom: 32rpx;
}

.participation-stats {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.stat-card {
  background: var(--gradient-card);
  border-radius: var(--radius-lg);
  padding: 24rpx 16rpx;
  text-align: center;
  border: 1rpx solid rgba(0,0,0,0.05);
  box-shadow: var(--shadow-sm);
}

.stat-number {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--primary-color);
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  color: var(--text-secondary);
}

.action-buttons {
  display: flex;
  gap: 16rpx;
}

.participant-actions, .observer-actions, .guest-actions, .organizer-actions {
  display: flex;
  gap: 16rpx;
  width: 100%;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 20rpx 24rpx;
  border-radius: var(--radius-lg);
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.action-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  transition: left 0.5s;
}

.action-btn:active::before {
  left: 100%;
}

.action-btn.primary {
  background: var(--gradient-primary);
  color: white;
  box-shadow: var(--shadow-md);
}

.action-btn.secondary {
  background: var(--gradient-card);
  color: var(--text-primary);
  border: 1rpx solid var(--divider);
}

.action-btn.outline {
  background: transparent;
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
}

.action-btn:active {
  transform: scale(0.98);
}

.btn-icon {
  font-size: 24rpx;
}

/* Content Section */
.content-section {
  background: var(--gradient-card);
  border-radius: var(--radius-xl);
  margin: 0 -20rpx 32rpx -20rpx;
  padding: 24rpx 20rpx;
  box-shadow: var(--shadow-lg);
}

/* Tab Section */
.tab-section {
  margin-bottom: 24rpx;
}

.tab-bar {
  display: flex;
  gap: 8rpx;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
  padding: 0 4rpx;
}

.tab-bar::-webkit-scrollbar {
  display: none;
}

.tab-item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 20rpx;
  border-radius: var(--radius-md);
  font-size: 26rpx;
  color: var(--text-secondary);
  background: var(--surface-hover);
  border: 1rpx solid var(--divider);
  white-space: nowrap;
  transition: all 0.3s ease;
  position: relative;
  min-width: 120rpx;
}

.tab-item.active {
  background: var(--primary-color);
  color: white;
  border-color: var(--primary-color);
  box-shadow: var(--shadow-sm);
}

.tab-text {
  font-weight: 500;
}

.tab-badge {
  background: rgba(255,255,255,0.2);
  color: white;
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 10rpx;
  margin-left: 8rpx;
  font-weight: 600;
}

/* Tab Content */
.tab-content {
  animation: fadeInUp 0.3s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Info Cards */
.info-card {
  background: var(--surface);
  border-radius: var(--radius-lg);
  padding: 24rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid var(--divider);
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.card-content {
  color: var(--text-secondary);
  line-height: 1.6;
}

.description, .rules {
  font-size: 26rpx;
}

/* Organizer Info */
.organizer-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.organizer-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  border: 2rpx solid var(--primary-color);
}

.organizer-details {
  flex: 1;
}

.organizer-name {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 4rpx;
}

.organizer-desc {
  font-size: 22rpx;
  color: var(--text-secondary);
}

.contact-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: var(--primary-color);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  border: none;
}

/* Checkins Section */
.checkins-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-header.prominent {
  margin-bottom: 32rpx;
}

.section-title-large {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
}

.title-text-large {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
}

.tab-badge.large {
  background: var(--gradient-primary);
  color: white;
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  font-weight: 600;
  min-width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.filter-controls.prominent {
  display: flex;
  align-items: center;
}

.filter-tabs.prominent {
  display: flex;
  gap: 6rpx;
  background: var(--surface);
  padding: 4rpx;
  border-radius: 20rpx;
  border: 1rpx solid var(--divider);
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.filter-tabs {
  display: flex;
  gap: 8rpx;
}

.filter-tab {
  padding: 8rpx 16rpx;
  border-radius: var(--radius-sm);
  font-size: 22rpx;
  color: var(--text-secondary);
  background: var(--surface-hover);
  border: 1rpx solid var(--divider);
  transition: all 0.3s ease;
}

.filter-tab.active {
  background: var(--primary-color);
  color: white;
  border-color: var(--primary-color);
}

/* Checkin Cards */
.checkins-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.checkins-list.enhanced {
  gap: 24rpx;
}

.checkin-card {
  background: var(--gradient-card);
  border-radius: var(--radius-lg);
  padding: 24rpx;
  border: 1rpx solid rgba(0,0,0,0.05);
  box-shadow: var(--shadow-sm);
  transition: all 0.3s ease;
}

.checkin-card.enhanced {
  padding: 28rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
  border: 1rpx solid rgba(0,0,0,0.06);
}

.checkin-card:active {
  transform: translateY(-2rpx);
  box-shadow: var(--shadow-md);
}

.checkin-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.checkin-header.enhanced {
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  border: 1rpx solid var(--divider);
}

.user-avatar.enhanced {
  width: 56rpx;
  height: 56rpx;
  border: 2rpx solid var(--primary-color);
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.user-info {
  flex: 1;
  margin-left: 12rpx;
}

.user-info.enhanced {
  margin-left: 16rpx;
}

.user-name {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 4rpx;
}

.checkin-time {
  font-size: 22rpx;
  color: var(--text-hint);
}

.checkin-day {
  background: var(--gradient-primary);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: var(--radius-sm);
  font-size: 22rpx;
  font-weight: 600;
}

.checkin-day.enhanced {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 10rpx 18rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 700;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.day-number {
  font-weight: 700;
}

.checkin-content {
  margin-bottom: 16rpx;
}

.checkin-text {
  font-size: 26rpx;
  color: var(--text-primary);
  line-height: 1.5;
  margin-bottom: 12rpx;
}

.checkin-images {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
}

.checkin-image {
  width: 100%;
  height: 160rpx;
  border-radius: var(--radius-md);
  object-fit: cover;
}

/* Checkin Actions */
.checkin-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid var(--divider);
}

.action-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  border-radius: var(--radius-sm);
  background: var(--surface-hover);
  transition: all 0.3s ease;
}

.action-item:active {
  background: var(--primary-color);
  color: white;
}

.action-icon {
  font-size: 22rpx;
}

.action-icon.liked {
  color: var(--error);
}

.action-count {
  font-size: 22rpx;
  color: var(--text-secondary);
}

/* Comments Section */
.comments-section {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid var(--divider);
}

.comment-item {
  display: flex;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.comment-item:last-child {
  margin-bottom: 0;
}

.comment-avatar {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
}

.comment-content {
  flex: 1;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.comment-name {
  font-size: 22rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.comment-time {
  font-size: 20rpx;
  color: var(--text-hint);
}

.comment-text {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 1.4;
}

/* Participants List */
.participants-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.participant-card {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  background: var(--gradient-card);
  border-radius: var(--radius-lg);
  border: 1rpx solid rgba(0,0,0,0.05);
  box-shadow: var(--shadow-sm);
  position: relative;
}

.participant-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  border: 2rpx solid var(--primary-color);
}

.participant-info {
  flex: 1;
}

.participant-name {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 4rpx;
}

.participant-role {
  font-size: 22rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
}

.participant-stats {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.stat-text {
  font-size: 20rpx;
  color: var(--text-hint);
}

.stat-divider {
  color: var(--divider);
}

.participant-badge {
  background: var(--gradient-primary);
  color: white;
  padding: 6rpx 12rpx;
  border-radius: var(--radius-sm);
  font-size: 20rpx;
  font-weight: 600;
}

/* Discussions List */
.discussions-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.discussion-card {
  background: var(--gradient-card);
  border-radius: var(--radius-lg);
  padding: 24rpx;
  border: 1rpx solid rgba(0,0,0,0.05);
  box-shadow: var(--shadow-sm);
  transition: all 0.3s ease;
}

.discussion-card:active {
  transform: translateY(-2rpx);
