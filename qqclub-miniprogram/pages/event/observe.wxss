/* pages/event/observe.wxss */

.observe-container {
  background-color: #f8f9fa;
  min-height: 100vh;
  padding-bottom: 120rpx; /* 为底部导航留出空间 */
}

/* 围观模式标识头部 */
.observe-header {
  position: relative;
  padding: 60rpx 40rpx 50rpx;
  background: linear-gradient(135deg, #1890ff 0%, #40a9ff 100%);
  color: white;
  overflow: hidden;
  border-radius: 0 0 40rpx 40rpx;
}

/* 简化的围观模式标识头部 */
.observe-header-simple {
  position: relative;
  padding: 40rpx 32rpx 32rpx;
  background: linear-gradient(135deg, #1890ff 0%, #40a9ff 100%);
  color: white;
  overflow: hidden;
  border-radius: 0 0 30rpx 30rpx;
}

.header-background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(24, 144, 255, 0.1) 0%, rgba(64, 169, 255, 0.1) 100%);
}

.header-content {
  position: relative;
  z-index: 1;
}

/* 围观标识 */
.observe-badge {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.observe-icon {
  font-size: 40rpx;
  margin-right: 12rpx;
}

.observe-text {
  font-size: 32rpx;
  font-weight: 600;
}

/* 升级提示 */
.upgrade-tip {
  text-align: center;
}

.tip-text {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 通用卡片样式 - 现代简约风格 */
.checkins-main-card,
.stats-card,
.upgrade-prompt,
.event-info-collapsible {
  margin: 20rpx 24rpx;
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(0, 0, 0, 0.02);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.card-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1a1a1a;
  letter-spacing: 0.5rpx;
}

.card-action {
  font-size: 26rpx;
  color: #1890ff;
  font-weight: 500;
}

/* 活动信息卡片 */
.event-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-enrolling {
  background-color: #e6f7ff;
  color: #1890ff;
}

.status-in_progress {
  background-color: #f6ffed;
  color: #52c41a;
}

.status-completed {
  background-color: #f9f0ff;
  color: #722ed1;
}

.event-content {
  margin-bottom: 30rpx;
}

.event-title {
  font-size: 38rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 20rpx;
  line-height: 1.4;
  letter-spacing: 0.5rpx;
}

.event-book {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.book-icon {
  margin-right: 8rpx;
  font-size: 32rpx;
}

.book-name {
  font-weight: 500;
}

.event-meta {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.meta-item {
  text-align: center;
  flex: 1;
}

.meta-label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.meta-value {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.event-description {
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.description-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 升级按钮 */
.upgrade-btn {
  width: 100%;
  background: linear-gradient(135deg, #1890ff 0%, #40a9ff 100%);
  color: white;
  padding: 24rpx 0;
  border-radius: 30rpx;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

/* 现代化统计网格 */
.stats-grid-modern {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.stat-item-modern {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #f8fafc 0%, #ffffff 100%);
  padding: 28rpx 24rpx;
  border-radius: 20rpx;
  border: 1rpx solid #f1f5f9;
  transition: all 0.3s ease;
}

.stat-icon-wrapper {
  width: 56rpx;
  height: 56rpx;
  background: linear-gradient(135deg, #1890ff 0%, #40a9ff 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.stat-icon {
  font-size: 28rpx;
  filter: brightness(0) invert(1);
}

.stat-content {
  flex: 1;
}

.stat-number {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 4rpx;
  line-height: 1;
}

.stat-label {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 500;
}

/* 现代化活动进度 */
.activity-progress-modern {
  padding-top: 32rpx;
  border-top: 1rpx solid #f5f5f5;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.progress-label {
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 600;
}

.progress-info-compact {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.progress-percentage {
  font-size: 28rpx;
  color: #1890ff;
  font-weight: 700;
}

.progress-text {
  font-size: 22rpx;
  color: #6b7280;
  font-weight: 500;
}

.progress-bar-modern {
  height: 8rpx;
  background-color: #f1f5f9;
  border-radius: 4rpx;
  overflow: hidden;
  position: relative;
}

.progress-fill-modern {
  height: 100%;
  background: linear-gradient(90deg, #1890ff 0%, #40a9ff 100%);
  border-radius: 4rpx;
  transition: width 0.6s ease;
  position: relative;
}

.progress-fill-modern::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent 0%, rgba(255,255,255,0.4) 50%, transparent 100%);
  animation: shimmer 2s infinite;
}

@keyframes shimmer {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

