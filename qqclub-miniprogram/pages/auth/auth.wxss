/* pages/auth/auth.wxss */
page {
  background: linear-gradient(135deg, #7CB342 0%, #8BC34A 50%, #689F38 100%);
  min-height: 100vh;
}

.auth-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 0 32rpx;
  box-sizing: border-box;
}

/* 头部区域 */
.auth-header {
  text-align: center;
  padding: 120rpx 0 80rpx;
  color: white;
}

.logo {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  line-height: 1.5;
}

/* 登录表单 */
.auth-form {
  background: white;
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  box-shadow: 0 12rpx 48rpx rgba(0, 0, 0, 0.15);
  margin-bottom: 32rpx;
  flex: 1;
}

.login-section {
  margin-bottom: 48rpx;
}

.login-section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 24rpx;
  text-align: center;
}

/* 快速登录 */
.quick-login {
  margin-bottom: 32rpx;
}

/* 微信登录 */
.wechat-login {
  margin-bottom: 32rpx;
}

.login-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  padding: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 16rpx rgba(124, 179, 66, 0.2);
}

.login-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(124, 179, 66, 0.2);
}

.login-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.login-btn .loading-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  border-top: 3rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 16rpx;
}

/* 表单样式 */
.form-item {
  margin-bottom: 24rpx;
}

.form-input {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid var(--divider);
  border-radius: 12rpx;
  font-size: 28rpx;
  background: var(--background);
  transition: border-color 0.3s ease;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: var(--primary-color);
  background: white;
}

/* 按钮颜色扩展 */
.btn-success {
  background: #4CAF50;
  color: white;
}

.btn-success:active {
  background: #45a049;
}

/* 用户协议 */
.auth-agreement {
  padding: 24rpx 0;
  margin-bottom: 32rpx;
}

.agreement-content {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  flex-wrap: wrap;
}

.agreement-checkbox {
  display: flex;
  align-items: center;
  margin-right: 8rpx;
}

.agreement-checkbox checkbox {
  margin-right: 8rpx;
}

.agreement-link {
  color: white;
  text-decoration: underline;
  margin: 0 8rpx;
}

/* 底部区域 */
.auth-footer {
  text-align: center;
  padding: 32rpx 0;
}

.footer-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  font-style: italic;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.modal-content {
  background: white;
  border-radius: 24rpx;
  margin: 32rpx;
  width: calc(100vw - 64rpx);
  max-width: 600rpx;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  box-shadow: 0 12rpx 48rpx rgba(0, 0, 0, 0.3);
  position: relative;
  z-index: 1;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1rpx solid var(--divider);
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.modal-close {
  font-size: 48rpx;
  color: var(--text-secondary);
  line-height: 1;
  padding: 8rpx;
}

.modal-body {
  flex: 1;
  padding: 32rpx;
  overflow: hidden;
}

.agreement-text {
  height: 60vh;
  font-size: 28rpx;
  line-height: 1.8;
  color: var(--text-primary);
}

.modal-footer {
  padding: 24rpx 32rpx 32rpx;
  border-top: 1rpx solid var(--divider);
}

/* 响应式优化 */
@media (max-width: 750rpx) {
  .auth-container {
    padding: 0 24rpx;
  }

  .auth-form {
    padding: 32rpx 24rpx;
  }

  .login-btn {
    font-size: 30rpx;
    padding: 20rpx;
  }

  .logo {
    font-size: 100rpx;
  }

  .title {
    font-size: 42rpx;
  }

  .subtitle {
    font-size: 26rpx;
  }
}

/* 动画效果 */
@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.auth-form {
  animation: slideInUp 0.6s ease-out;
}

.login-section {
  animation: slideInUp 0.6s ease-out;
}

.login-section:nth-child(2) {
  animation-delay: 0.1s;
}

.login-section:nth-child(3) {
  animation-delay: 0.2s;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}