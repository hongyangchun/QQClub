/* pages/forum/create.wxss */

/* Page Header */
.page-header {
  background: var(--gradient-primary);
  margin: -20rpx -20rpx 32rpx -20rpx;
  padding: 40rpx 20rpx 20rpx;
  position: relative;
  overflow: hidden;
}

.page-header::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  animation: float 8s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translate(0, 0) rotate(0deg); }
  50% { transform: translate(-30rpx, -30rpx) rotate(180deg); }
}

.header-nav {
  position: relative;
  z-index: 2;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.nav-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(255,255,255,0.2);
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid rgba(255,255,255,0.3);
  transition: all 0.3s ease;
}

.nav-btn:active {
  transform: scale(0.9);
  background: rgba(255,255,255,0.3);
}

.nav-icon {
  font-size: 32rpx;
  color: white;
  font-weight: bold;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 700;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.publish-btn {
  font-size: 28rpx;
  color: white;
  font-weight: 600;
  padding: 12rpx 24rpx;
  background: rgba(255,255,255,0.2);
  border-radius: 20rpx;
  border: 1rpx solid rgba(255,255,255,0.3);
}

/* Create Form */
.create-form {
  animation: fadeInUp 0.6s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.form-section {
  background: var(--gradient-card);
  border-radius: var(--radius-xl);
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow-md);
  border: 1rpx solid rgba(0,0,0,0.05);
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  gap: 8rpx;
}

.title-text {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.title-required {
  color: var(--error);
  font-size: 24rpx;
  font-weight: bold;
}

.title-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.title-count {
  margin-left: auto;
  font-size: 24rpx;
  color: var(--text-hint);
}

/* Category Selector */
.category-selector {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.category-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  border-radius: var(--radius-lg);
  border: 2rpx solid var(--divider);
  background: var(--surface);
  transition: all 0.3s ease;
  cursor: pointer;
}

.category-item.selected {
  border-color: var(--primary-color);
  background: rgba(79, 70, 229, 0.05);
  box-shadow: 0 0 20rpx rgba(79, 70, 229, 0.1);
}

.category-item:active {
  transform: scale(0.98);
}

.category-icon {
  font-size: 32rpx;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--surface-hover);
  border-radius: var(--radius-md);
}

.category-info {
  flex: 1;
}

.category-name {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 4rpx;
}

.category-desc {
  font-size: 22rpx;
  color: var(--text-secondary);
  line-height: 1.3;
}

/* Input Fields */
.input-wrapper, .content-wrapper {
  border: 1rpx solid var(--divider);
  border-radius: var(--radius-lg);
  background: var(--surface);
  overflow: hidden;
  transition: all 0.3s ease;
}

.input-wrapper:focus-within, .content-wrapper:focus-within {
  border-color: var(--primary-color);
  box-shadow: 0 0 20rpx rgba(79, 70, 229, 0.1);
}

.title-input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: var(--text-primary);
  background: transparent;
  border: none;
}

.content-input {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: var(--text-primary);
  background: transparent;
  border: none;
  line-height: 1.6;
}

/* Image Upload */
.image-upload-area {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.uploaded-images {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 100%;
  padding-bottom: 100%;
}

.image-preview {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: var(--radius-md);
  object-fit: cover;
}

.image-delete {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 32rpx;
  height: 32rpx;
  background: var(--error);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(239, 68, 68, 0.3);
}

.upload-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  border: 2rpx dashed var(--divider);
  border-radius: var(--radius-lg);
  background: var(--surface-hover);
  transition: all 0.3s ease;
  min-height: 200rpx;
}

.upload-btn:active {
  background: var(--primary-color);
  border-color: var(--primary-color);
  color: white;
}

.upload-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.upload-text {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.upload-desc {
  font-size: 22rpx;
  color: var(--text-secondary);
}

/* Tag Input */
.tag-input-area {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tag-input-wrapper {
  display: flex;
  gap: 12rpx;
}

.tag-input {
  flex: 1;
  height: 72rpx;
  padding: 0 20rpx;
  border: 1rpx solid var(--divider);
  border-radius: var(--radius-lg);
  background: var(--surface);
  font-size: 26rpx;
  color: var(--text-primary);
}

.add-tag-btn {
  padding: 16rpx 24rpx;
  background: var(--primary-color);
  color: white;
  border-radius: var(--radius-lg);
  font-size: 26rpx;
  font-weight: 600;
  border: none;
}

.selected-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: var(--primary-color);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.tag-delete {
  width: 24rpx;
  height: 24rpx;
  background: rgba(255,255,255,0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16rpx;
  font-weight: bold;
}

.suggested-tags {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.suggested-title {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.suggested-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.suggested-tag {
  background: var(--surface-hover);
  color: var(--text-secondary);
  padding: 8rpx 16rpx;
  border-radius: var(--radius-sm);
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.suggested-tag:active {
  background: var(--primary-color);
  color: white;
  transform: scale(0.95);
}

/* Publish Options */
.publish-options {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.option-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}

.option-info {
  flex: 1;
}

.option-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 4rpx;
}

.option-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.option-switch {
  transform: scale(0.8);
}

/* Image Preview Modal */
.image-preview-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 40rpx;
}

.preview-image {
  max-width: 100%;
  max-height: 80vh;
  border-radius: var(--radius-lg);
}

/* Safe Area Bottom */
.safe-area-bottom {
  height: 40rpx;
  background: transparent;
}

/* Responsive Design */
@media (max-width: 750rpx) {
  .category-selector {
    grid-template-columns: 1fr;
    gap: 12rpx;
  }

  .uploaded-images {
    grid-template-columns: repeat(2, 1fr);
  }

  .suggested-list {
    justify-content: center;
  }

  .header-nav {
    padding: 0 8rpx;
  }

  .form-section {
    padding: 24rpx;
  }
}