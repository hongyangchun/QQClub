/* pages/forum/list.wxss */

/* Page Header */
.page-header {
  background: var(--gradient-primary);
  margin: -20rpx -20rpx 32rpx -20rpx;
  padding: 40rpx 20rpx 60rpx;
  position: relative;
  overflow: hidden;
}

.page-header::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  animation: float 8s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translate(0, 0) rotate(0deg); }
  50% { transform: translate(-30rpx, -30rpx) rotate(180deg); }
}

.header-content {
  position: relative;
  z-index: 2;
  text-align: center;
  color: white;
}

.header-title {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 26rpx;
  opacity: 0.8;
}

/* Search Section */
.search-section {
  margin-bottom: 24rpx;
}

.search-bar {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.search-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background: var(--gradient-card);
  border-radius: var(--radius-lg);
  padding: 0 20rpx;
  border: 1rpx solid var(--divider);
  box-shadow: var(--shadow-sm);
}

.search-icon {
  font-size: 28rpx;
  color: var(--text-hint);
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  color: var(--text-primary);
}

.search-clear {
  width: 32rpx;
  height: 32rpx;
  background: var(--text-hint);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
}

.search-btn {
  background: var(--primary-color);
  color: white;
  padding: 20rpx 32rpx;
  border-radius: var(--radius-lg);
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: var(--shadow-md);
}

/* Category Tabs */
.category-tabs {
  display: flex;
  gap: 8rpx;
  margin-bottom: 24rpx;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
  padding: 0 4rpx;
}

.category-tabs::-webkit-scrollbar {
  display: none;
}

.tab-item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 20rpx;
  border-radius: var(--radius-md);
  font-size: 26rpx;
  color: var(--text-secondary);
  background: var(--surface-hover);
  border: 1rpx solid var(--divider);
  white-space: nowrap;
  transition: all 0.3s ease;
  position: relative;
  min-width: 120rpx;
}

.tab-item.active {
  background: var(--primary-color);
  color: white;
  border-color: var(--primary-color);
  box-shadow: var(--shadow-sm);
}

.tab-text {
  font-weight: 500;
}

.tab-badge {
  background: rgba(255,255,255,0.2);
  color: white;
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 10rpx;
  margin-left: 8rpx;
  font-weight: 600;
}

.tab-indicator {
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 20rpx;
  height: 4rpx;
  background: var(--primary-color);
  border-radius: 2rpx;
}

/* Sort Section */
.sort-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}

.sort-tabs {
  display: flex;
  gap: 16rpx;
}

.sort-tab {
  padding: 12rpx 20rpx;
  border-radius: var(--radius-md);
  font-size: 26rpx;
  color: var(--text-secondary);
  background: var(--surface-hover);
  border: 1rpx solid var(--divider);
  transition: all 0.3s ease;
}

.sort-tab.active {
  background: var(--primary-color);
  color: white;
  border-color: var(--primary-color);
}

.sort-text {
  font-weight: 500;
}

.create-post-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: var(--gradient-primary);
  color: white;
  padding: 16rpx 24rpx;
  border-radius: var(--radius-md);
  font-size: 26rpx;
  font-weight: 600;
  box-shadow: var(--shadow-sm);
  border: none;
}

.btn-icon {
  font-size: 24rpx;
}

/* Posts Container */
.posts-container {
  animation: fadeInUp 0.6s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.posts-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* Post Cards */
.post-card {
  background: var(--gradient-card);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-md);
  border: 1rpx solid rgba(0,0,0,0.05);
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.post-card:active {
  transform: translateY(-4rpx);
  box-shadow: var(--shadow-lg);
}

/* Post Header */
.post-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 24rpx 16rpx;
}

.author-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

.author-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  border: 2rpx solid var(--primary-color);
}

.author-details {
  flex: 1;
  min-width: 0;
}

.author-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 4rpx;
}

.post-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.post-category {
  font-size: 20rpx;
  color: var(--primary-color);
  background: rgba(79, 70, 229, 0.1);
  padding: 4rpx 12rpx;
  border-radius: var(--radius-sm);
  font-weight: 600;
}

.post-time {
  font-size: 20rpx;
  color: var(--text-hint);
}

.post-actions {
  display: flex;
  gap: 8rpx;
}

.action-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: var(--surface-hover);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.action-btn:active {
  background: var(--primary-color);
  color: white;
  transform: scale(0.9);
}

.action-icon {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* Post Body */
.post-body {
  padding: 0 24rpx 16rpx;
}

.post-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.post-content {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.5;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* Post Images */
.post-images {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.post-image {
  width: 100%;
  height: 200rpx;
  border-radius: var(--radius-md);
  object-fit: cover;
}

/* Post Tags */
.post-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.tag {
  font-size: 24rpx;
  color: var(--primary-color);
  background: rgba(79, 70, 229, 0.1);
  padding: 6rpx 16rpx;
  border-radius: var(--radius-sm);
  font-weight: 500;
}

/* Post Footer */
.post-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx 24rpx;
  border-top: 1rpx solid var(--divider);
}

.post-stats {
  display: flex;
  gap: 32rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.stat-icon {
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.stat-icon.liked {
  animation: likeAnimation 0.3s ease;
}

@keyframes likeAnimation {
  0% { transform: scale(1); }
  50% { transform: scale(1.3); }
  100% { transform: scale(1); }
}

.stat-text {
  font-size: 24rpx;
  color: var(--text-hint);
}

.post-status {
  display: flex;
  align-items: center;
}

.essence-badge {
  background: linear-gradient(135deg, #FFD700, #FFA500);
  color: white;
  padding: 6rpx 16rpx;
  border-radius: var(--radius-sm);
  font-size: 20rpx;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(255, 215, 0, 0.3);
  text-shadow: 0 1rpx 2rpx rgba(0,0,0,0.1);
}

/* Empty State */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  animation: fadeIn 0.6s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.empty-illustration {
  margin-bottom: 32rpx;
}

.empty-emoji {
  font-size: 120rpx;
  display: block;
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
  40% { transform: translateY(-20rpx); }
  60% { transform: translateY(-10rpx); }
}

.empty-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.5;
  margin-bottom: 40rpx;
}

/* Loading & More States */
.loading-overlay, .load-more-section, .end-reached {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
}

.loading-text, .load-text, .end-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-top: 16rpx;
}

.load-more-btn {
  background: var(--gradient-card);
  border: 1rpx solid var(--divider);
  padding: 20rpx 40rpx;
  border-radius: var(--radius-lg);
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 28rpx;
  color: var(--text-secondary);
  transition: all 0.3s ease;
  box-shadow: var(--shadow-sm);
}

.load-more-btn:active {
  transform: scale(0.98);
  background: var(--primary-color);
  color: white;
}

.load-icon {
  font-size: 24rpx;
  transition: transform 0.3s ease;
}

.load-more-btn:active .load-icon {
  transform: translateY(4rpx);
}

.end-line {
  width: 120rpx;
  height: 2rpx;
  background: var(--divider);
  margin-bottom: 16rpx;
}

/* More Menu Modal */
.more-menu-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 40rpx;
}

.more-menu-content {
  background: var(--gradient-card);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-xl);
  max-width: 400rpx;
  width: 100%;
  overflow: hidden;
  animation: modalSlideUp 0.3s ease-out;
}

@keyframes modalSlideUp {
  from {
    opacity: 0;
    transform: translateY(100rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.menu-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx;
  border-bottom: 1rpx solid var(--divider);
  transition: all 0.3s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: var(--surface-hover);
}

.menu-icon {
  font-size: 28rpx;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-text {
  font-size: 28rpx;
  color: var(--text-primary);
  font-weight: 500;
}

/* Responsive Design */
@media (max-width: 750rpx) {
  .search-bar {
    flex-direction: column;
    gap: 12rpx;
  }

  .search-btn {
    width: 100%;
  }

  .sort-section {
    flex-direction: column;
    gap: 16rpx;
    align-items: stretch;
  }

  .sort-tabs {
    justify-content: center;
  }

  .post-images {
    grid-template-columns: repeat(2, 1fr);
  }

  .post-stats {
    gap: 20rpx;
  }

  .category-tabs {
    justify-content: flex-start;
  }
}