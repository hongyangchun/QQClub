/* pages/forum/detail.wxss */

/* Page Header */
.post-header {
  background: var(--gradient-primary);
  margin: -20rpx -20rpx 24rpx -20rpx;
  padding: 40rpx 20rpx 20rpx;
  position: relative;
  overflow: hidden;
}

.post-header::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  animation: float 8s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translate(0, 0) rotate(0deg); }
  50% { transform: translate(-30rpx, -30rpx) rotate(180deg); }
}

.header-nav {
  position: relative;
  z-index: 2;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.nav-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(255,255,255,0.2);
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid rgba(255,255,255,0.3);
  transition: all 0.3s ease;
}

.nav-btn:active {
  transform: scale(0.9);
  background: rgba(255,255,255,0.3);
}

.nav-icon {
  font-size: 32rpx;
  color: white;
  font-weight: bold;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 700;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

/* Post Content */
.post-content {
  background: var(--gradient-card);
  border-radius: var(--radius-xl);
  margin-bottom: 24rpx;
  box-shadow: var(--shadow-lg);
  border: 1rpx solid rgba(0,0,0,0.05);
  overflow: hidden;
}

.post-info-card {
  padding: 32rpx;
  position: relative;
}

.post-category-badge {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  background: var(--gradient-primary);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.category-icon {
  font-size: 20rpx;
}

.category-name {
  font-size: 22rpx;
}

.post-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-primary);
  line-height: 1.4;
  margin-bottom: 24rpx;
}

.post-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.author-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.author-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  border: 2rpx solid var(--primary-color);
}

.author-details {
  flex: 1;
}

.author-name {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 4rpx;
}

.author-badge {
  background: var(--gradient-primary);
  color: white;
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 600;
}

.post-time {
  font-size: 22rpx;
  color: var(--text-secondary);
}

.post-stats {
  display: flex;
  gap: 16rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 22rpx;
  color: var(--text-secondary);
}

.stat-icon {
  font-size: 20rpx;
}

.post-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag-item {
  background: var(--surface-hover);
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  border: 1rpx solid var(--divider);
}

.tag-text {
  font-size: 22rpx;
  color: var(--text-secondary);
}

/* Post Body */
.post-body {
  padding: 0 32rpx 32rpx 32rpx;
}

.post-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: var(--text-primary);
  margin-bottom: 24rpx;
  display: block;
}

.post-images {
  margin-bottom: 24rpx;
}

.image-grid {
  display: grid;
  gap: 12rpx;
  border-radius: var(--radius-lg);
  overflow: hidden;
}

.image-grid.grid-1 {
  grid-template-columns: 1fr;
}

.image-grid.grid-2 {
  grid-template-columns: repeat(2, 1fr);
}

.image-grid.grid-3, .image-grid.grid-4 {
  grid-template-columns: repeat(2, 1fr);
}

.image-grid.grid-5, .image-grid.grid-6 {
  grid-template-columns: repeat(3, 1fr);
}

.image-grid.grid-7, .image-grid.grid-8, .image-grid.grid-9 {
  grid-template-columns: repeat(3, 1fr);
}

.post-image {
  width: 100%;
  height: 200rpx;
  border-radius: var(--radius-md);
}

/* Post Actions */
.post-actions {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 32rpx;
  border-top: 1rpx solid var(--divider);
  background: var(--surface);
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  border-radius: var(--radius-md);
  transition: all 0.3s ease;
  min-width: 120rpx;
}

.action-item:active {
  background: var(--primary-color);
  color: white;
  transform: scale(0.95);
}

.action-item.liked, .action-item.collected {
  color: var(--error);
}

.action-icon {
  font-size: 28rpx;
}

.action-text {
  font-size: 22rpx;
  font-weight: 600;
}

/* Comments Section */
.comments-section {
  background: var(--gradient-card);
  border-radius: var(--radius-xl);
  padding: 32rpx;
  margin-bottom: 120rpx;
  box-shadow: var(--shadow-md);
  border: 1rpx solid rgba(0,0,0,0.05);
}

.comments-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid var(--divider);
}

.comments-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.sort-options {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.sort-text {
  font-size: 24rpx;
  color: var(--text-secondary);
  transition: color 0.3s ease;
}

.sort-text.active {
  color: var(--primary-color);
  font-weight: 600;
}

.sort-divider {
  color: var(--divider);
  font-size: 24rpx;
}

/* Comments List */
.comments-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.comment-item {
  display: flex;
  gap: 16rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid var(--divider);
}

.comment-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.comment-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  border: 1rpx solid var(--divider);
  flex-shrink: 0;
}

.comment-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.comment-author {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.author-name {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.floor-number {
  font-size: 22rpx;
  color: var(--text-hint);
  background: var(--surface-hover);
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
}

.comment-time {
  font-size: 22rpx;
  color: var(--text-hint);
}

.comment-text {
  font-size: 26rpx;
  line-height: 1.5;
  color: var(--text-primary);
  display: block;
}

.comment-images {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.comment-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: var(--radius-md);
}

/* Replies Section */
.replies-section {
  background: var(--surface);
  border-radius: var(--radius-md);
  padding: 16rpx;
  margin-top: 8rpx;
}

.reply-item {
  font-size: 24rpx;
  line-height: 1.4;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
}

.reply-item:last-child {
  margin-bottom: 0;
}

.reply-author {
  color: var(--primary-color);
  font-weight: 600;
}

.reply-text {
  color: var(--text-hint);
  margin: 0 4rpx;
}

.reply-target {
  color: var(--primary-color);
  font-weight: 600;
}

.reply-content {
  color: var(--text-secondary);
}

.view-more-replies {
  margin-top: 12rpx;
  padding-top: 12rpx;
  border-top: 1rpx solid var(--divider);
}

.more-text {
  font-size: 22rpx;
  color: var(--primary-color);
}

/* Comment Actions */
.comment-actions {
  display: flex;
  gap: 24rpx;
  margin-top: 8rpx;
}

.comment-action {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 6rpx 12rpx;
  border-radius: var(--radius-sm);
  transition: all 0.3s ease;
}

.comment-action:active {
  background: var(--primary-color);
  color: white;
}

.comment-action.liked {
  color: var(--error);
}

.comment-action.delete-comment {
  color: var(--text-hint);
}

.comment-action.delete-comment:active {
  color: var(--error);
  background: rgba(220, 38, 38, 0.1);
}

.action-icon {
  font-size: 20rpx;
}

.action-count, .action-text {
  font-size: 22rpx;
  color: inherit;
}

/* Empty Comments */
.empty-comments {
  text-align: center;
  padding: 60rpx 40rpx;
}

.empty-emoji {
  font-size: 80rpx;
  display: block;
  margin-bottom: 16rpx;
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
  40% { transform: translateY(-20rpx); }
  60% { transform: translateY(-10rpx); }
}

.empty-text {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* Load More */
.load-more {
  text-align: center;
  padding: 20rpx;
  margin-top: 20rpx;
}

.load-text {
  font-size: 26rpx;
  color: var(--text-secondary);
}

/* Comment Input Container */
.comment-input-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-top: 1rpx solid var(--divider);
  padding: 16rpx;
  transform: translateY(100%);
  transition: transform 0.3s ease;
  z-index: 100;
  box-shadow: 0 -2rpx 20rpx rgba(0,0,0,0.1);
}

.comment-input-container.show {
  transform: translateY(0);
}

.comment-input-wrapper {
  display: flex;
  align-items: flex-end;
  gap: 12rpx;
  position: relative;
}

.comment-input {
  flex: 1;
  min-height: 72rpx;
  max-height: 200rpx;
  padding: 16rpx 20rpx;
  border: 1rpx solid var(--divider);
  border-radius: 36rpx;
  background: var(--surface);
  font-size: 26rpx;
  color: var(--text-primary);
  line-height: 1.4;
}

.input-actions {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.action-btn {
  width: 72rpx;
  height: 72rpx;
  border-radius: 36rpx;
  background: var(--surface-hover);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  border: 1rpx solid var(--divider);
}

.action-btn:active {
  transform: scale(0.9);
}

.action-btn.image-preview {
  background: var(--primary-color);
  border-color: var(--primary-color);
  color: white;
}

.send-btn.active {
  background: var(--primary-color);
  border-color: var(--primary-color);
  color: white;
}

.btn-icon {
  font-size: 32rpx;
}

/* Comment Image Preview */
.comment-image-preview {
  display: flex;
  gap: 12rpx;
  margin-top: 12rpx;
  padding: 0 8rpx;
}

.preview-item {
  position: relative;
  width: 80rpx;
  height: 80rpx;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: var(--radius-sm);
}

.remove-image {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 24rpx;
  height: 24rpx;
  background: var(--error);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16rpx;
  font-weight: bold;
}

/* Action Modal */
.action-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
  z-index: 1000;
}

.action-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  background: white;
  border-radius: var(--radius-xl) var(--radius-xl) 0 0;
  width: 100%;
  max-height: 60vh;
  overflow: hidden;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.action-modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid var(--divider);
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: var(--surface-hover);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.modal-close:active {
  background: var(--error);
  color: white;
}

.close-icon {
  font-size: 28rpx;
  font-weight: bold;
}

.action-list {
  padding: 16rpx;
}

.modal-action-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 16rpx;
  border-radius: var(--radius-md);
  transition: all 0.3s ease;
}

.modal-action-item:active {
  background: var(--surface-hover);
}

.modal-action-item .action-icon {
  font-size: 28rpx;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--surface-hover);
  border-radius: var(--radius-sm);
}

.modal-action-item .action-text {
  font-size: 28rpx;
  color: var(--text-primary);
}

/* Loading State */
.loading-overlay {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx;
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-top: 24rpx;
}

/* Empty State */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-emoji {
  font-size: 120rpx;
  display: block;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.5;
  margin-bottom: 32rpx;
}

/* Responsive Design */
@media (max-width: 750rpx) {
  .post-meta {
    flex-direction: column;
    align-items: flex-start;
    gap: 16rpx;
  }

  .post-actions {
    padding: 16rpx 20rpx;
  }

  .action-item {
    min-width: 80rpx;
    padding: 8rpx 16rpx;
  }

  .comment-input-wrapper {
    padding: 0 8rpx;
  }

  .action-btn {
    width: 60rpx;
    height: 60rpx;
    border-radius: 30rpx;
  }

  .btn-icon {
    font-size: 28rpx;
  }
}